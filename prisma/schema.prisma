// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            BigInt   @id @default(autoincrement())
  name          String
  email         String   @unique
  postalCode    String?
  address       String?
  phone         String?
  passwordHash  String
  role          UserRole @default(MEMBER)
  isActive      Boolean  @default(true)
  lastLoginAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens     PasswordResetToken[]
  favorites               Favorite[]
  passwordResetToken   String?   @db.VarChar(255)
  passwordResetExpires DateTime?
}

enum UserRole {
  MEMBER
  ADMIN
}

model EmailVerificationToken {
  id        BigInt   @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    BigInt
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        BigInt   @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    BigInt
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
}

model City {
  id           Int       @id @default(autoincrement())
  nameJa       String
  nameEn       String?
  prefecture   String?
  apiCityCode  String?   // or lat/lon に変更してもOK
  lat          Float    // 追加
  lon          Float    // 追加
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  favorites    Favorite[]
  weatherCache WeatherCache[]
}

model Favorite {
  id        BigInt  @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    BigInt
  city      City    @relation(fields: [cityId], references: [id])
  cityId    Int
  createdAt DateTime @default(now())

  @@unique([userId, cityId]) // 同じ都市を重複登録しない
}

model WeatherCache {
  id        BigInt  @id @default(autoincrement())
  city      City    @relation(fields: [cityId], references: [id])
  cityId    Int     @unique

  temp      Float
  humidity  Int
  windSpeed Float
  condition String
  icon      String
  fetchedAt DateTime @default(now())
}
